<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PlayerDetailsController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <VBox spacing="10.0">
            <Label fx:id="playerNameLabel" style="-fx-font-family: 'Arial'; -fx-font-weight: bold; -fx-font-size: 32px; -fx-text-fill: #1e3d5e;" text="Virat Kohli" />
            <Label fx:id="playerPositionLabel" style="-fx-font-family: 'Impact'; -fx-font-size: 22px; -fx-text-fill: #4a6572;" text="Batsman" />
         </VBox>
         <HBox spacing="10.0">
            <Label fx:id="playerClubLabel" style="-fx-font-family: 'Cambria'; -fx-font-size: 20px; -fx-text-fill: #2f3e50;" text="Royal Challengers Bangalore" />
            <Label style="-fx-font-size: 20px; -fx-text-fill: #2f3e50;" text="|" />
            <Label fx:id="playerCountryLabel" style="-fx-font-family: 'Arial'; -fx-font-size: 20px; -fx-text-fill: #2f3e50;" text="India" />
         </HBox>
         <VBox spacing="10.0">
            <Label fx:id="playerNumberLabel" style="-fx-font-family: 'Arial'; -fx-font-size: 18px; -fx-text-fill: #3e5b6b;" text="Jersey Number: 18" />
            <Label fx:id="playerAgeLabel" style="-fx-font-family: 'Arial'; -fx-font-size: 18px; -fx-text-fill: #3e5b6b;" text="Age: 35 years" />
            <Label fx:id="playerHeightLabel" style="-fx-font-family: 'Arial'; -fx-font-size: 18px; -fx-text-fill: #3e5b6b;" text="Height: 1.75 meters" />
            <Label fx:id="playerSalaryLabel" style="-fx-font-family: 'Arial'; -fx-font-size: 18px; -fx-text-fill: #3e5b6b;" text="Weekly Salary: $17,000,000" />
         </VBox>
      </VBox>
      <ImageView fx:id="playerImage" fitHeight="327.0" fitWidth="255.0" layoutX="350.0" layoutY="59.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
