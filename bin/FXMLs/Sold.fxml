<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="150.0" prefWidth="600.0" style="-fx-background-color: #EAF6FF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SoldController">
    <children>
        <VBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefWidth="560.0" spacing="20.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="15.0">
            <children>
                <Label fx:id="playerNameLabel" style="-fx-text-fill: #4682B4; -fx-font-size: 24px; -fx-font-family: 'Saira Stencil One';" text="Set a Selling Price for Virat Kohli" />
                <HBox alignment="CENTER" spacing="20.0">
                    <TextField fx:id="playerPriceTextField" alignment="CENTER" prefHeight="35.0" prefWidth="220.0" promptText="Type a real value (in USD)" style="-fx-font-size: 16px; -fx-background-color: #D7F0FF; -fx-border-color: #ADD8E6; -fx-border-radius: 5px; -fx-padding: 8px;" />
                    <Button fx:id="priceClearButton" mnemonicParsing="false" onAction="#clearPriceTextField" prefHeight="35.0" prefWidth="90.0" style="-fx-font-size: 16px; -fx-background-color: #FFB347; -fx-text-fill: white; -fx-border-radius: 5px;" text="Clear" />
                </HBox>
                <HBox alignment="CENTER" spacing="30.0">
                    <Button fx:id="confirmSaleButton" mnemonicParsing="false" onAction="#confirmSale" prefHeight="40.0" prefWidth="160.0" style="-fx-font-size: 16px; -fx-background-color: #5CB85C; -fx-text-fill: white; -fx-border-radius: 5px;" text="Confirm Sale" />
                    <Button fx:id="undoSaleButton" mnemonicParsing="false" onAction="#undoSale" prefHeight="40.0" prefWidth="160.0" style="-fx-font-size: 16px; -fx-background-color: #D9534F; -fx-text-fill: white; -fx-border-radius: 5px;" text="Undo Sale" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
